@model MonuGuardaApp.Models.VisitasGuiadas

@{
    ViewData["Title"] = "Edit";
}

<h4 style="margin-top: 20px">Editar visita guiada</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VisitasGuiadasId" />
            <div class="form-group">
                <label asp-for="GuiaId" class="control-label">Guia</label>
                <select asp-for="GuiaId" class="form-control" asp-items="ViewBag.GuiaId"></select>
                <span asp-validation-for="GuiaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocaldePartida" class="control-label"></label>
                <input asp-for="LocaldePartida" class="form-control" />
                <span asp-validation-for="LocaldePartida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocaldeChegada" class="control-label"></label>
                <input asp-for="LocaldeChegada" class="form-control" />
                <span asp-validation-for="LocaldeChegada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatadaVisita" class="control-label"></label>
                <input asp-for="DatadaVisita" class="form-control" />
                <span asp-validation-for="DatadaVisita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NMaxPessoas" class="control-label"></label>
                <input asp-for="NMaxPessoas" class="form-control" />
                <span asp-validation-for="NMaxPessoas" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Completo" /> @Html.DisplayNameFor(model => model.Completo)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
