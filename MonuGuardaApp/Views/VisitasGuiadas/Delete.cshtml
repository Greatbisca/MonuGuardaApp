@model MonuGuardaApp.Models.VisitasGuiadas

@{
    ViewData["Title"] = "Delete";
}

<h3 style="margin-top: 20px" >Tem a certeza que deseja apagar?</h3>
<div>
    <hr/>
    <dl class="row">
        <dt class = "col-sm-2">
            Guia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Guia.GuiaId)
        </dd class>
        <dt class = "col-sm-2">
            Pontos de interesse
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PontosdeInteresse.PontosdeInteresseId)
        </dd class>
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Local de partida
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocalPartida)
        </dd>
        <dt class = "col-sm-2">
            Local de chegada
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocalChegada)
        </dd>
        <dt class = "col-sm-2">
            Data da visita guiada
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataVisita)
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            Numero máximo de pessoas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NMaxPessoas)
        </dd>
        <dt class = "col-sm-2">
            Completo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Completo)
        </dd>
    </dl>
    
    <form asp-action="Delete" style="margin-bottom: 20px">
        <input type="hidden" asp-for="VisitasGuiadasId" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a lista</a>
    </form>
</div>
