@model MonuGuardaApp.Models.VisitasGuiadas

@{
    ViewData["Title"] = "Create";
}

<h1 style="margin-top: 20px">Criar nova visita guiada</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GuiaId" class="control-label">ID do guia</label>
                <input asp-for="GuiaId" class="form-control" />
                <span asp-validation-for="GuiaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocalPartida" class="control-label">Local de partida</label>
                <input asp-for="LocalPartida" class="form-control" />
                <span asp-validation-for="LocalPartida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocalChegada" class="control-label">Local de chegada</label>
                <input asp-for="LocalChegada" class="form-control" />
                <span asp-validation-for="LocalChegada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataVisita" class="control-label">Data da visita guiada</label>
                <input asp-for="DataVisita" class="form-control" />
                <span asp-validation-for="DataVisita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Morada" class="control-label">Morada</label>
                <input asp-for="Morada" class="form-control" />
                <span asp-validation-for="Morada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telemovel" class="control-label">Telemóvel</label>
                <input asp-for="Telemovel" class="form-control" />
                <span asp-validation-for="Telemovel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NMaxPessoas" class="control-label">Número máximo de pessoas</label>
                <input asp-for="NMaxPessoas" class="form-control" />
                <span asp-validation-for="NMaxPessoas" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Completo" /> @Html.DisplayNameFor(model => model.Completo)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-bottom: 20px">
    <a asp-action="Index">Voltar a lista</a>
</div>

