@model MonuGuardaApp.Models.VisitasGuiadas

@{
    ViewData["Title"] = "Details";
}

<h1 style="margin-top: 20px">Detalhes</h1>

<div>
    <h4>Visita Guiada</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id do guia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GuiaId)
        </dd>
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Local de partida
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocalPartida)
        </dd>
        <dt class = "col-sm-2">
            Local de chegada
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocalChegada)
        </dd>
        <dt class = "col-sm-2">
            Data da visita guiada
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataVisita)
        </dd>
        <dt class = "col-sm-2">
            Morada
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Morada)
        </dd>
        <dt class = "col-sm-2">
            Telemóvel
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telemovel)
        </dd>
        <dt class = "col-sm-2">
            Número máximo de pessoas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NMaxPessoas)
        </dd>
        <dt class = "col-sm-2">
            Completo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Completo)
        </dd>
    </dl>
</div>
<div style="margin-bottom: 20px">
    <a asp-action="Edit" asp-route-id="@Model.VisitasGuiadasId">Editar visita guiada</a> |
    <a asp-action="Index">Voltar a lista</a>
</div>
