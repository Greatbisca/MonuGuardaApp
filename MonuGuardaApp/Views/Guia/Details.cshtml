@model MonuGuardaApp.Models.Guia

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes do Guia</h1>

<div>
    <h4>Guia</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telemovel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telemovel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    @if (Model.Photo != null)
    {<img class ="img-responsive full-width" 
          src="data:image/jpeg;base64, @Convert.ToBase64String(Model.Photo)" />}
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.GuiaId">Editar</a> |
    <a asp-action="Index">Voltar a Lista</a>
</div>
