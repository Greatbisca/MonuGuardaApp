@model MonuGuardaApp.Models.Guia

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes do Guia</h1>

<div class="row" style="margin-top: 20px">
    <dl class="row col-md-5">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Telemovel)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Telemovel)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    <div class="col-md-5">
        @if (Model.Photo != null)
        {<img class="img-responsive full-width"
              src="data:image/jpeg;base64, @Convert.ToBase64String(Model.Photo)" />}
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.GuiaId">Editar</a> |
    <a asp-action="Index">Voltar a Lista</a>
</div>
