@model IEnumerable<MonuGuardaApp.Models.Guia>

@{
    ViewData["Title"] = "Index";
}

<h1>Guias</h1>

<p>
    <a asp-action="Create">Criar Vovo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telemovel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telemovel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GuiaId">Editat</a> |
                <a asp-action="Details" asp-route-id="@item.GuiaId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.GuiaId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
